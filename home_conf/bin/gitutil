#!/bin/bash

#
# gitutil -- git utilities
#
# Create : GuShenghua @ SDR
# Update : 2018/06/19
#

if [[ $# -lt 2 ]]; then
    echo "Usage: $0 hash_1 hash_2 [sub_dir/sub_file ...]"
    exit 1
fi

hash_1=$1
shift
hash_2=$1
shift
declare -a sub_dir=$@
date=$(date +%Y%m%d)

if [[ ! -d ".git" ]]; then
	echo "ERROR: run $(basename $0) at the src top dir, please."
	exit 1
fi

# get changed list
if [[ ${sub_dir[@]} -ne 0 ]]; then
	declare -a file_list=$(git diff --name-only ${hash_1} ${hash_2} ${sub_dir})
else
	declare -a file_list=$(git diff --name-only ${hash_1} ${hash_2})
fi

#export hash_1 files
git archive --format=tar --prefix=${hash_1}_${date}/ ${hash_1} ${file_list} | tar xvf -

#export hash_1 files
git archive --format=tar --prefix=${hash_2}_${date}/ ${hash_2} ${file_list} | tar xvf -
